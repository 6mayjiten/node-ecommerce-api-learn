{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "es2020": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "indent": ["error", 4],
        "no-underscore-dangle": "off",
        "no-else-return": "off",
        "func-names": ["error", "as-needed", { "generators": "as-needed" }],
        "func-style": 0,
        "class-methods-use-this": "off",
        "consistent-return": "off"
    }
}
